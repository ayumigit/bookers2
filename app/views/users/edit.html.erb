<main>
        <p id="notice"></p>
        <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div class="error_explanation">
         <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>
          <ul>
           <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@user,local:true do |f| %>
        <div>
          <h4>Name</h4>
          <%= f.text_field :name %>
        </div>
        <div>
          <h4>Image</h4>
           <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div>
          <h4>introduction</h4>
          <%= f.text_area :introduction %>
        </div>

        <%= f.submit 'Update User' , class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</main>
